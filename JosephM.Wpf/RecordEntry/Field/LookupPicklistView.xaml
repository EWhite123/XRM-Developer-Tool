<field:FieldControlBase
    x:Class="JosephM.Wpf.RecordEntry.Field.LookupPicklistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:shared="clr-namespace:JosephM.Wpf.Shared"
    xmlns:field="clr-namespace:JosephM.Wpf.RecordEntry.Field"
    xmlns:fakes="clr-namespace:JosephM.Application.ViewModel.Fakes;assembly=JosephM.Application.ViewModel.Fakes"
    mc:Ignorable="d" d:DesignHeight="100" d:DesignWidth="500"
    d:DataContext="{d:DesignInstance Type=fakes:FakeLookupViewModel, IsDesignTimeCreatable=True}">
    <field:FieldControlBase.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/JosephM.Wpf;component/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </field:FieldControlBase.Resources>
    <Grid Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}"  MinWidth="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Visibility="{Binding LoadingViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
            <shared:FieldLoadingView DataContext="{Binding LoadingViewModel}" />
        </Grid>
        <Grid Grid.Row="1"
                  Visibility="{Binding LoadingViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityHiddenConverter}, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <ComboBox
            TabIndex="1"
            Name="ComboBox"
            Style="{StaticResource FieldEntryStyle}"
            Tag="Key"
            DisplayMemberPath="Name"
            ItemsSource="{Binding ItemsSource}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay, NotifyOnValidationError=True}"
            IsEnabled="{Binding IsEditable}"
            Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}" />
            </Grid>
            <Grid Grid.Column="1" Visibility="{Binding AllowNew, Converter={StaticResource BoolToVis}}">
                <Button DataContext="{Binding Path=NewButton}"
                        Style="{StaticResource AddRowButton}"
                            Command="{Binding Command}" ToolTip="Click To Create New" />
            </Grid>
        </Grid>
    </Grid>
</field:FieldControlBase>